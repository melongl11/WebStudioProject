          a(href='/home/')
            img(id='logoImg', src='/img/logo.png', height='auto', width='100%', style='margin-left: auto; margin-right: auto; display: block; float:left;')
        each menuItem in tabmenu
          .col-xs-3(style='border: 1px solid #777; padding: 13px')
