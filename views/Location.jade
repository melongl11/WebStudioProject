        .col-sm-2
  
  
    div.visible-lg-12.visible-md-12.hidden-xs.hidden-sm
      div.col-sm-2(style="position:fixed; height:100%; color: #ffffff; background-color:#111133; opacity: 0.8;  filter: alpha(opacity=50);")
        div
          a(href='/home/')
            img(id='logoImg', src='/img/logo.png', height='auto', width='90%', style='margin-left: auto; margin-right: auto; display: block; float:left;  margin-bottom: 15%;')
        div
          ul(style="list-style:none;").leftMenu
            each menuItem in tabmenu
              li.topmenu(style="height:100%; margin-bottom: 5px; margin-left: 5%")
                a(href='/'+menuItem.id, style='background-position: left top; text-align:left; clear:left; font-size:1.1vw; margin-top:5%;', class="topmenu")= menuItem.contents
                div(id=menuItem.contents, style='height:0px; overflow: hidden; opacity:0px;text-align:left; font-size:0.9vw;')
                  ul(style='list-style:none; padding-left:20px;')
                    each submenuItem in submenu
                      if submenuItem.tab_id==menuItem.id
                        li(style="padding-left:0px;").submenu
                          a(href='/'+menuItem.id+'/'+submenuItem.id)= submenuItem.item
                  
          div#companyInfo(style="position:absolute; bottom: 0px; width:17vw;")
            img(src="/img/companyinfo.png", style="width:100%;")
      
      div.col-sm-8(style="margin-top:5%; position: relative; left:17% ; margin-left:10%;")
        h1(style="text-align:center; margin-bottom: 15px; color:#97B4E8")
          strong DIRECTION
        h4(style="text-align:center;color:#97B4E8 ")
          오시는 길
        #map
        h3
          a(href='https://maps.googleapis.com/maps/api/directions/json?origin=Toronto&destination=Montreal&key=AIzaSyCK16ZkFDNf2PqzEvySEA0ZM7jB4qs_6wA', style='margin-left:75%')="경로찾기"
        
        
        script.
          function initMap() {
          var uluru = {lat: 36.579135, lng: 127.293858};
          var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 12,
          center: uluru
          });
          var marker = new google.maps.Marker({
          position: uluru,
          map: map
          });
          
          var map = new google.maps.Map(document.getElementById('map_mobile'), {
          zoom: 12,
          center: uluru
          });
          var marker = new google.maps.Marker({
          position: uluru,
          map: map
          });
          }
          
      
        script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCK16ZkFDNf2PqzEvySEA0ZM7jB4qs_6wA&callback=initMap')
